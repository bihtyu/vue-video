.list-wrap
  position: relative
  padding: 20px 15px 0
  overflow: hidden
  font-size: 12px
  color: white
  background: #634f48
  background: linear-gradient(left, #634f48, #566874)
  background: -webkit-gradient(linear, left top, right top, from(#634f48), to(#566874));
  .title
    font-size: 16px
    line-height: 2.5
  .list-detail
    overflow: hidden
    margin-bottom: 15px
    .list-cover
      width: 50%
      position: relative
      float: left
      overflow: hidden
      img
        width: 100%
        height: auto
        border-radius: 8px
      .video-time
        position: absolute
        bottom: 5px
        right: 5px
        padding: 3px 5px
        font-size: 14px;
        color: white;
        background: black
        border-radius: 2px
    .list-info
      width: 50%
      min-height: 100px
      float: left
      position: relative
      box-sizing: border-box;
      padding: 5px 15px
      .list-title
        position: absolute;
        top: 3px;
        left: 15px;
        font-size: 16px;
        line-height: 1.3;
      .list-tag
        position: absolute
        bottom: 0
        left: 15px
  .van-list__finished-text
    margin-top: -15px
    color: white
